{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "System": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/ecommerce-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  "ConnectionStrings": {
    //"DefaultConnection": "Server=db32507.public.databaseasp.net;User Id=db32507;Password=Lz4#6@yHrR%7;Database=db32507;Trusted_Connection=True;TrustServerCertificate=True;",
    "DefaultConnection": "Server=db32507.public.databaseasp.net;Database=db32507;User Id=db32507;Password=Lz4#6@yHrR%7;TrustServerCertificate=True;Integrated Security=False;"

  },
  "Jwt": {
    "Key": "YourSuperSecretKeyThatIsAtLeast32CharactersLongForJWTTokenGeneration!",
    "Issuer": "ECommerceApp",
    "Audience": "ECommerceApp",
    "ExpiryMinutes": "600"
  },
  "AllowedHosts": "*"
}
